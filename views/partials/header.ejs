<!DOCTYPE html>
<html lang="en" class="has-background-dark">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/script.js" defer></script>
    <title>Marvel Comics App</title>
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-brand">
        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbar"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbar" class="navbar-menu">
        <div class="navbar-start">
          <a href="/" class="navbar-item"> Home </a>
          <% if (user) { %>
          <a href="/users/<%= user.username %>/collection" class="navbar-item">
            My Collection
          </a>
          <a href="/users/<%= user.username %>/wishlist" class="navbar-item">
            My Wishlist
          </a>
          <a href="/users/<%= user.username %>/pull_list" class="navbar-item">
            My Pull List
          </a>
          <% } %>

          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link"> Search </a>

            <div class="navbar-dropdown">
              <a href="/search/comics" class="navbar-item">
                Search for comics
              </a>
              <a href="/search/series" class="navbar-item">
                Search for series
              </a>
            </div>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if (user) { %>
              <a
                href="/users/<%= user.username %>/profile"
                class="button is-primary"
              >
                <strong>My Profile</strong>
              </a>
              <a href="/users/logout" class="button is-light">Sign out</a>
              <% } else { %>
              <a href="/users/new" class="button is-primary">
                <strong>Sign up</strong>
              </a>
              <a href="/users/login" class="button is-light"> Log in </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </nav>
