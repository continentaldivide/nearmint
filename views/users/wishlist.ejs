<%- include("../partials/header.ejs") %>

<h2>Wishlist</h2>

<% wishlist.forEach((comic) => { %>

<div>
  <p><%= comic.title %></p>
  <form
    method="POST"
    action="/users/<%= user.username %>/wishlist?_method=DELETE"
  >
    <input
      type="text"
      name="id"
      id="id"
      value="<%= comic.id %>"
      required
      hidden
    />
    <button type="submit">Remove from wishlist</button>
  </form>
  <form
    method="POST"
    action="/users/<%= user.username %>/collection?_method=PUT"
  >
    <input
      type="text"
      name="id"
      id="id"
      value="<%= comic.id %>"
      required
      hidden
    />
    <button type="submit">Add to collection</button>
  </form>
</div>

<% }) %> <%- include("../partials/footer.ejs") %>
